{
  "functions": {
    "api/article/[slug].ts": {
      "memory": 256,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/article/:slug",
      "destination": "/api/article/:slug",
      "missing": [{ "type": "query", "key": "_rdr" }]
    },
    {
      "source": "/article/:slug/",
      "destination": "/api/article/:slug",
      "missing": [{ "type": "query", "key": "_rdr" }]
    },
    { "source": "/:path((?!api|assets|favicon|.*\\.).+)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/article/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=3600, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}